<h1>Login</h1>

<%= form_tag '/login' do %>

  Email: <%= text_field_tag :email, nil , class:"form-control" , placeholder: "Email"%>
  Password: <%= password_field_tag :password, nil, placeholder: "password" , class:"form-control" %>
  <br/>
  <%= submit_tag "Submit" , class:"btn btn-success" %>
<% end %>